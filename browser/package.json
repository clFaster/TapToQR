{
  "name": "tap-to-qr",
  "version": "0.0.0",
  "description": "Turn any page into a QR code in seconds. TapToQR is a lightweight browser extension for sharing pages and custom content.",
  "license": "GPL-3.0",
  "author": "Moritz Reis",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.4.1",
  "scripts": {
    "dev": "vite build --watch",
    "start:firefox": "web-ext run --start-url https://mozilla.org --browser-console --source-dir build",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "catalog:",
    "@fortawesome/free-regular-svg-icons": "^7.2.0",
    "@fortawesome/free-solid-svg-icons": "catalog:",
    "@fortawesome/react-fontawesome": "catalog:",
    "jimp": "^1.6.0",
    "qrcode": "^1.5.4",
    "react": "catalog:",
    "react-dom": "catalog:",
    "styled-components": "^6.3.9",
    "vite-plugin-static-copy": "^3.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/qrcode": "^1.5.6",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@types/webextension-polyfill": "^0.12.4",
    "@vitejs/plugin-react": "^5.1.4",
    "eslint": "catalog:",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.3.0",
    "typescript": "catalog:",
    "typescript-eslint": "^8.55.0",
    "vite": "^7.3.1",
    "web-ext": "^9.3.0",
    "webextension-polyfill": "^0.12.0"
  }
}
